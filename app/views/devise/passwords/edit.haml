%div{ class: "password_reset_sent_div_form" }
  %div{ class: "password_reset_sent_div_form_panel panel panel-default" }
    %div{ class: "panel-heading" }
      %h1{ class: "panel-title" } Change your password
    %div{ class: "panel-body" }
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token

        %div{ class: "form-group"}
          - if @minimum_password_length
            %em
              = "(#{@minimum_password_length} characters minimum)"
            = f.password_field(:password, class: 'form-control', placeholder: "New password", minlength: 3, maxlength: 15, autocomplete: "off")

        %div{ class: "form-group"}
          = f.password_field(:password_confirmation, class: 'form-control', placeholder: 'Password', minlength: 3, maxlength: 15, autocomplete: "off")

        %div{ class: "form-group"}
          = f.submit(class: "btn btn-default", value: "Change my password")

      = render "devise/shared/links"
