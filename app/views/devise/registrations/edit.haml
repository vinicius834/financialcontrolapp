%div{ class: "users_div_form" }
  %div{ class: "users_div_form_panel panel panel-default" }
    %div{ class: "panel-heading" }
      %h1{ class: "panel-title" }= "Edit #{resource_name.to_s.humanize}"
    %div{ class: "panel-body" }
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        %div{ class: "form-group" }
          = f.text_field(:full_name, class: "form-control",  placeholder: "Full Name", minlength: 2, maxlength: 70, required: true, autofocus: true)

        %div{ class: "form-group input-group input-group" }
          %span{ class: "input-group-addon" } @
          = f.email_field(:email, type: "email", class: "form-control", placeholder: "Email", minlength:5, maxlength: 70)
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div= "Currently waiting confirmation for: #{resource.unconfirmed_email}"

        %div{ class: "form-group" }
          %i (leave blank if you don"t want to change it)
          = f.password_field(:password, class: "form-control", placeholder: "Password", minlength: 3, maxlength: 15)

        %div{ class: "form-group" }
          %i (leave blank if you don"t want to change it)
          = f.password_field(:password_confirmation, class: "form-control", placeholder: "Password Confirmation", minlength: 3, maxlength: 15, autocomplete: "off")

        %div{ class: "form-group" }
          %i (we need your current password to confirm your changes)
          = f.password_field(:current_password, class: "form-control", placeholder: "Current Password", minlength: 3, maxlength: 15, autocomplete: "off")
        %div{ class: "form-group" }
          = f.submit(class: "btn btn-default", value: "Update")
      %h3 Cancel my Account
      %p Unhappy?
      %span= button_to("Cancel my account",  registration_path(resource_name), class: "btn btn-default", data: { confirm: "Are you sure?" }, method: :delete)

      = link_to "Back", :back
