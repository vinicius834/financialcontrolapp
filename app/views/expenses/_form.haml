= form_for @expense do |f|
  %div{ class: "form-group" } 
    = f.text_field(:description, class: 'form-control', placeholder: 'Description', minlength: 3, maxlength: 70, required: true, autofocus: true)
  %div{ class: "form-group input-group" }
    %span{ class: "input-group-addon"} $
    = f.text_field(:value, class: 'form-control currency', minlength: 3, placeholder: 'Value', autofocus: true)
  %div{ class: "form-group"}
    = f.date_field(:expiration_date, class: 'form-control', placeholder: 'Expiration Date', caption: 'Expiration Date', required: true)
  %div{ class: "form-group" }  
    = f.label('Paid?')
    = f.check_box(:paid)
  = f.submit(class: 'btn btn-default', value: "Save")
  = link_to('Cancel', root_path, class: 'btn btn-default')
  
  