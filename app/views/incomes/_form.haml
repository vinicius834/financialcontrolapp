= form_for @income do |f|
  %div{ class: "form-group" } 
    = f.text_field(:description, class: 'form-control', minlength: 3, placeholder: 'Description', required: true, autofocus: true)
  %div{ class: "form-group input-group" }
    %span{ class: "input-group-addon"} $
    = f.text_field(:value, class: 'form-control currency', placeholder: 'Value', required: true)
  %div{ class: "form-group"}
    = f.date_field(:date, class: 'form-control', placeholder: 'Value', required: true)
  = f.submit(class: 'btn btn-default', value: "Save")
  = link_to('Cancel', root_path, class: 'btn btn-default')