%div{ class: "incomes_div_form" }
  %div{ class: "incomes_div_form_panel panel panel-default" }
    %div{ class: "panel-heading" }
      %h1{ class: "panel-title" } New Income
    
    %div{ class: "panel-body" }
      %form{ action: "/incomes/", method: "post" }
        %div{ class: "form-group" } 
          %input{ type: "text", class: "form-control", name: "income[description]", placeholder: "Description", required: true, autofocus: true }
        
        %div{ class: "form-group input-group input-group" }
          %span{ class: "input-group-addon"} $
          %input{ type: "text", class: "form-control currency", name: "income[value]", maxlength: "18", step: "any", placeholder: "Value", required: true, min: 0 }
      
        %div{ class: "form-group"}
          %input{ type: "date", class: "form-control", name: "income[date]", required: true }
        %input{ type: "submit", class: "btn btn-default", value: "Save" }
        %a{ href: "/", class: "btn btn-default" } Cancel