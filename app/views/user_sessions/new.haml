%div{ class: "login_div" }
  /- if flash[:notice]
  /%div{ class: "alert-danger login_flash alert"}
  /= styled_flash
  %div{ class: "panel panel-default login_panel" }
    %div{ class: "panel-heading" } 
      %h1{ class: "panel-title" } Login
    %div{ class: "panel-body" } 
      - if @user_session.errors.any?
        %div{ class: "alert-danger alert error_explanation"}
          %ul
            - @user_session.errors.full_messages.each do |message|
              %li 
                = message
      %div{ class: "form_div" }
        = form_for @user_session do |f| 
          %div{ class: "form-group input-group input-group" }
            %span{ class: "input-group-addon" } @
            = f.text_field(:email, class: 'form-control', placeholder: 'Email', required: true, autofocus: true)
          %div{ class: "form-group" }
            = f.password_field(:password, class: 'form-control', placeholder: 'Password', required: true)  
          = f.submit(class: 'btn btn-default', value: 'Login')
      %div{ class: "login_links_aux" } 
        = link_to('Sign up?', new_user_path, class: 'sign_up_link')
        = link_to('Forgot your password?', new_user_path, class: 'forgot_link')