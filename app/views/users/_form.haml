= form_for @user do |f|
  %div{ class: "form-group" } 
    = f.text_field(:full_name, class: 'form-control',  placeholder: 'Full Name', minlength: 2, maxlength: 70, required: true, autofocus: true)
  %div{ class: "form-group input-group input-group" }
    %span{ class: "input-group-addon"} @
    = f.email_field(:email, type: "email", class: 'form-control', placeholder: 'Email', minlength:5, maxlength: 70)
  %div{ class: "form-group"}
    = f.password_field(:password, class: 'form-control', placeholder: 'Password', minlength: 3, maxlength: 15)
  %div{ class: "form-group"}
    = f.password_field(:password_confirmation, class: 'form-control', placeholder: 'Password Confirmation', minlength: 3, maxlength: 15)
  = f.submit(class: 'btn btn-default', value: "Save")
  = link_to('Cancel', root_path, class: 'btn btn-default')