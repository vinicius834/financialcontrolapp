= form_for @user do |f|
  %div{ class: "form-group" } 
    = f.text_field(:full_name, class: 'form-control', placeholder: 'Full Name', required: true, autofocus: true)
  %div{ class: "form-group input-group input-group" }
    %span{ class: "input-group-addon"} @
    = f.email_field(:email, class: 'form-control', placeholder: 'Email', required: true)
  %div{ class: "form-group"}
    = f.password_field(:password, class: 'form-control', placeholder: 'Password', required: true)
  %div{ class: "form-group"}
    = f.password_field(:password_confirmation, class: 'form-control', placeholder: 'Password Confirmation', required: true)
  = f.submit(class: 'btn btn-default', value: "Save")
  = link_to('Cancel', root_path, class: 'btn btn-default')